# Maintainer: Mariano Iglesias <mgiglesias@gmail.com>
pkgname=snakefire
pkgver=1.0.3
pkgrel=1
pkgdesc='A Campfire desktop client'
arch=('i686' 'x86_64' 'ppc')
url='http://snakefire.org'
license=('MIT')
depends=('python2' 'python2-distribute' 'python2-pyqt' 'python-keyring' 'python-notify' 'python-pyfire>=0.3.4')
optdepends=('python-gnomekeyring: For GNOME/XFCE/LXDE users that require notifications' 'python2-pyenchant: For spell checking support')
makedepends=('python2' 'python2-distribute')
source=(http://snakefire.org/downloads/$pkgname-${pkgver//_/-}.tar.gz)
md5sums=('691e1697ea93097dc65e0d1193102533')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py build || return 1
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py install --install-menu-in-user-mode --root="$pkgdir" --optimize=1 || return 1
}
